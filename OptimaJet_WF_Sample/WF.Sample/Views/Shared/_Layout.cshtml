@{
    ViewBag.Title = string.Format("WorkfolowEngine NET :: {0}", ViewBag.Title);
}
<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Style.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
        <meta name="viewport" content="width=device-width">
    </head>
    <body>
        <div class="container">
            <header class="header clearfix">
                <a style="text-decoration:none" href="/"><div class="logo" style="color:red">WorkfolowEngine NET</div></a>
                    @Html.Partial("Partial/MainMenu")
            </header>
            <div class="info">
                <article class="hero clearfix">
                <div class="col_100">
                    @Html.Partial("Partial/Header")
                </div>
              </article>
              <article class="article clearfix">
                  <div class="clearfix"></div>
                  @RenderBody()
              </article>
            </div>
            @Html.Partial("Partial/Footer")
        </div>
    </body>
</html>